# ===========================================
# AgentFlow Environment Variables
# Copy to .env and fill in values
# ===========================================

# --- Database ---
DATABASE_URL=postgresql+asyncpg://agentflow:agentflow@localhost:5432/agentflow
DATABASE_URL_SYNC=postgresql://agentflow:agentflow@localhost:5432/agentflow

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- JWT Auth ---
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- API ---
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=http://localhost:3000

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --- Email (Mailpit for local dev) ---
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@agentflow.dev

# --- AI Providers (optional for Phase 1) ---
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# --- Slack OAuth (headless connection) ---
# Create a Slack app at https://api.slack.com/apps
# Set redirect URL to: http://localhost:8000/api/v1/integrations/slack/oauth/callback
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_REDIRECT_URI=http://localhost:8000/api/v1/integrations/slack/oauth/callback

# --- WorkOS (deferred — not needed for Phase 1) ---
# WORKOS_API_KEY=
# WORKOS_CLIENT_ID=

# --- Stripe (deferred — Phase 2: cloud tier) ---
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# --- AWS (optional) ---
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=agentflow-uploads

# --- Sentry ---
# SENTRY_DSN=

# --- App ---
APP_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
